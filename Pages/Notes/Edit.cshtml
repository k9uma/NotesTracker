@page
@model NotesTracker.Pages.Notes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Note.ID" />
            <div class="form-group">
                <label asp-for="Note.TaskTitle" class="control-label"></label>
                <input asp-for="Note.TaskTitle" class="form-control" />
                <span asp-validation-for="Note.TaskTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.TaskDescription" class="control-label"></label>
                <input asp-for="Note.TaskDescription" class="form-control" />
                <span asp-validation-for="Note.TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.TaskDueDate" class="control-label"></label>
                <input asp-for="Note.TaskDueDate" class="form-control" />
                <span asp-validation-for="Note.TaskDueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
